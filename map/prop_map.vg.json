{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Cocoa Bean Origins Around the World",
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "map/ne_110m_1.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "map/ne_110m_1.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_graticules_30"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "lightgray"
            }
        },     
        {
            "data": {
                "url": "map/bean_origin_data_count.csv"
            },
            "mark": {"type": "circle"},
            "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"},
                "latitude": {"field": "latitude", "type": "quantitative"},
                "size": {
                    "field": "count",
                    "type": "quantitative",
                    "scale": {"domain": [1, 260]},
                    "title": "Count"
                },
                "tooltip": [{"field": "bean_origin", "type": "nominal", "title": "Country of Origin"}, 
                {"field": "count", "type": "quantitative", "title": "Number of Bean Origins"}
                ]
            }
        }
    ]
}
